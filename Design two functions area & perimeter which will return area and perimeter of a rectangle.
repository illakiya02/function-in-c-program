#include<stdio.h>
int area(int l,int w)
{
  int r;
  r=l*w;
  return r;
}
int perimeter(int l,int w)
{
    int p;
    p=2*(l+w);
    return p;
}
int main()
{
    int a,b,x,y;
    printf("Enter the length:\n");
    scanf("%d",&a);
    printf("Enter the breadth:\n");
    scanf("%d",&b);
    x=area(a,b);
    y=perimeter(a,b);
    printf("Area of Rectangle:%d\n",x);
    printf("Perimeter of Rectangle:%d\n",y);
    return 0;
    
}
